@using Capstone.Web.Models;
@model List<Park>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @foreach (Park p in Model)
    {

        <div class="container-fluid">

            <a href="@Url.Action("Detail", "Home", new { parkCode = p.ParkCode})">
                <img id ="parkimage" src="@Url.Content("~/Content/Images/parks/" + p.ParkCode.ToLower() + ".jpg")" alt="@p.ParkCode" />
            </a>
            <h3 id="name">@p.ParkName</h3>
            <p id="description">@p.ParkDescription</p>

        </div>

    }
    <div>
    </div>
</body>
</html>
